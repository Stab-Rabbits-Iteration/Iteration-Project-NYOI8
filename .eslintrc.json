{
    "ignorePatterns": ["**/test", "**/__tests__"],
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["warn", 2],
        "no-unused-vars": ["off", { "vars": "local" }],
        "no-case-declarations": "off",
        "prefer-const": "warn",
        "quotes": ["warn", "single"],
        "react/prop-types": "off",
        "semi": ["warn", "always"],
        "space-infix-ops": "warn"
    },
    "settings": {
        "react": { "version": "detect"}
      }
}
